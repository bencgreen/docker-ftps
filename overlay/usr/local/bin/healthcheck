#!/usr/bin/with-contenv sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Attempt to connect to the local FTP server.
#======================================================================================================================

bcg-debug "Connecting to FTP server 127.0.0.1."

FILE=`mktemp` || exit 1
CHECK=$(lftp -c "open -u ${FTPS_USER},${FTPS_PASS} 128.0.0.1; put -e -E ${FILE} && echo 1")

[[ "${CHECK}" = "1" ]] && exit 0
exit 1
