#!/usr/bin/with-contenv sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Create lftp configuration.
#======================================================================================================================

bf-echo "Writing lftp config..."
esh -o ${FTPS_LFTP_CONF} \
    ${BCG_TEMPLATES}/lftp.conf.esh
bf-done
