#!/usr/bin/with-contenv sh

set -euo pipefail
export BCG_E="vsftpd/$(basename ${0})"


#======================================================================================================================
# Run vsftpd server.
#======================================================================================================================

[[ ! -f ${VSFTPD_CONF} ]] && bcg-error "vsftpd configuration file not found."

bcg-echo "Starting vsftpd."
vsftpd ${VSFTPD_CONF}
